<p id="notice"><%= notice %></p>
<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% current_user.posts.each do |post| %>
      <tr>
        <td><%= post.user_id %></td>
        <td><%= post.title %></td>
        <td><%= post.body %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
  </tbody>

</table>


<br>

<br>
<%= link_to 'New Post', new_post_path %>
<br>
<table class="table">
  <tbody>
    <% User.all.each do |user| %>
      <% if user != current_user %>
        <td><%= user.email %></td>
      <% end %>
      <% if !user.followed_by?(current_user) && user != current_user %>

       <td><%= link_to "follow", follow_path(:user => user, :curr_user => current_user), :class => 'btn btn-primary'%> </td>
       
      <% elsif user.followed_by?(current_user) && user != current_user %>
     
       <td> <%= link_to "unfollow", unfollow_path(:user => user, :curr_user => current_user), :class => 'btn btn-primary'%> </td>
     
      <% end %>
    <% end %>
  </tbody>
</table>


