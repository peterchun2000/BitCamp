<div class="container">

  <div class="row">
    <div class="col-lg-10 col-lg-offset-1 col-md-10 col-md-offset-1">
      <div class="well">
        <header class="postheader">
          <p id="notice"><%= notice %></p>
          <h1>Your Posts</h1>
        </header>
        <table id="my-post-table">
          <thead class="text-center">
            <tr class='thestuff'>
              <th>Title</th>
              <th>Body</th>
              <th colspan="3"></th>
            </tr>
          </thead>


          <tbody>
            <% current_user.posts.each do |post| %>
            <tr>
              <td><%= post.user_id %></td>
              <td><%= post.title %></td>
              <td><%= post.body %></td>
              <td><%= link_to 'Show', post , :class =>'action-links' %></td>
              <td><%= link_to 'Edit', edit_post_path(post) ,:class =>'action-links' %></td>
              <td>
                <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } ,:class =>'action-links' %>
              </td>
            </tr>
            <% end %>
          </tbody>

        </table>

        <br>

        <br>
        <%= link_to 'New Post', new_post_path, :id=>'Post-Button' %>
        <div class="container">
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-10 col-lg-offset-1 col-md-10 col-md-offset-1">
      <div class="well">

        <header class="postheader">
          <h1 class="text-center">Posts</h1>
        </header>
        <hr>

        <% Post.where(user_id: current_user.all_following).order(created_at: :desc).each_with_index do |post, index| %>
          <div class="blog-card <%= index % 2 == 0 ? 'alt' : '' %>">
            <div class="meta">
              <div class="photo" style="background-image: url(<%= post.photos %>)"></div>
              <ul class="details">
                <li class="author"><%= post.user.email %></li>
                <li class="date"><%=post.created_at.to_date%></li>
              </ul>
            </div>
            <div class="description">
              <% if post.is_short? %>
                <div class="post md-render"><%= post.body %></div>
              <% else %>
                <h1 class="title"><%= post.title %></h1>
                <p class="read-more">
                  <%= link_to 'Read More', post %>
                </p>
              <% end %>
            </div>
          </div>
          <hr>
        <% end %>

      </div>
    </div>
  </div>
</div>